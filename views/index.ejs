<!-- views/index.ejs -->
<html lang="en">
    <head>
        <link rel="icon" href="https://ak9.picdn.net/shutterstock/videos/1008345439/thumb/10.jpg?ip=x480" type="image/x-icon">
        <% include partials/head %>
    </head>

    <body>
        <header>
            <% include partials/header %>
        </header>

        <main>
            <!-- input form -->
            <div class="container">
                <row>
                    <h1 class="text-center">Add an Entry</h1> <p class = "text-center" >(Enteries with same heading not allowed)</p>

                    <form class="col-6 mx-auto" action="/task/new" method="POST">
                      <input type="text" class="form-control" name="heading" required="true" placeholder="Heading...">                <span> <br> <br>
                        <input type="text" class="form-control" name="task"    required="true" placeholder="Task explaination...">     <span> <br><br>
                        <input type="text" class="form-control" name="group"   required="true" placeholder="Group name..">             <span> <br> <br>
                        <input type="text" class="form-control" name="deadline"required="true" placeholder="Deadline...">              <span> <br> <br>
                    <button type="Submit" class="btn btn-primary" style="background-color:CornflowerBlue;margin:auto;display:block">Submit</button>
                    </form>
                </row>
                <!-- unordered list (ul) -->
                <h2 class="text-center">Current ToDo List</h2> <p class = "text-center" >
                <div class="row">
                    <ul class="col-6 mx-auto">
                        <% for(var i = 0; i < workList.length; i++) { %>
                            <li type="1"><%=workList[i]%> </i>
                        <% } %>
                    </ul>
                </div>
            </div>
        </main>

        <footer>
            <% include partials/footer %>
        </footer>
    </body>
</html>
